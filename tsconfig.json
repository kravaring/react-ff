{
    "compilerOptions": {
      "target": "esNext",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.test.ts"
    ]
  }
  